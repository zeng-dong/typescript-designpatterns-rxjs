{
    "compilerOptions": {
        "strict": true,
        "target": "ES2015",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./",
        "moduleResolution": "node",
        "removeComments": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "watchOptions": {
        "excludeDirectories": ["**/node_modules", "dist"]
    }
}